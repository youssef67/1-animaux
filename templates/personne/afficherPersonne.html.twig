{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}

{% block monTitre %}Voici la fiche de {{ personne.nom }}{% endblock %}
{% block body %}
{% for dispose in personne.disposes %}
<div class="row align-items-center m-2 p-2">
    <div class="col-2">
        <img src="{{ asset("images/" ~ dispose.animal.image)}}" alt="">
    </div>
    <div class="col-auto">
        <div>
            <h2><a href="{{ path("afficher_animal", {'id' : dispose.animal.id }) }}">{{ dispose.animal.nom }}</a></h2>
            <div>{{ dispose.animal.description }}</div>
            <div><a href="{{ path("afficher_famille", {'id' : dispose.animal.famille.id})}}" class="btn btn-primary">{{ dispose.animal.famille.libelle }}</a></div>
            <div>
                {% for continent in dispose.animal.continents %}
                    <a href="{{ path("afficherContinent", {'id' : continent.id }) }}" class="btn btn-warning">{{ continent.libelle }}</a>
                {% endfor %}
            </div>
        </div>
        <div>
            Nombre : {{ dispose.nb }}
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}